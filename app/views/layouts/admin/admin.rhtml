<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8" />		
		<title><%= @page_title ? @page_title : RANNOTATE_SITE_NAME %> Administration</title>
		<%= stylesheet_link_tag "docs.css" %>
		<%= javascript_include_tag "prototype", "scriptaculous" %>
	</head>
	<body>
	
<div id="header">
  <span class="header_search_links"> 
		  </span>
  <%= link_to(RANNOTATE_SITE_NAME + " Administration", {:controller => 'upload', :action => 'index'},{:class=>'header_link'}) %><br/>
		  <% cur_lib_ver = get_current_version() %>
		  <span class="header_subtext">
		    <b>Version:</b> <%= cur_lib_ver.ver_string %> 
		    <b>Updated:</b>	<%= cur_lib_ver.date.strftime("%b %d %H:%M %Y") %>
		  </span>
</div>

<div id="sidebar_slim">
<h2>Links</h2>
<%= link_to 'Upload New Documentation', :action => 'create' %><br/>
<%= link_to 'Manage Libraries', :action => 'list' %><br/>
<%= link_to 'Manage Annotations', :controller => 'notes' %><br/>
<%= link_to 'Ban Ip Ranges', :controller => 'ban' %><br/>
</div>

<div id="body_content_wide">
<%= @content_for_layout %>
</div>

</body>
</html>